@inproceedings{10.1145/3462633.3483976,
author = {Umer, Muhammad Azmi and Ahmed, Chuadhry Mujeeb and Jilani, Muhammad Taha and Mathur, Aditya P.},
title = {Attack Rules: An Adversarial Approach to Generate Attacks for Industrial Control Systems Using Machine Learning},
year = {2021},
isbn = {9781450384872},
